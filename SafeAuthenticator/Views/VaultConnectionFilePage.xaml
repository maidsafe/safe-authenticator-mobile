<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage x:Class="SafeAuthenticator.Views.VaultConnectionFilePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SafeAuthenticator.ViewModels"
             Title="Choose a Vault">

    <ContentPage.Resources>
        <Style TargetType="StackLayout">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="LightGray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding AddNewVaultConnectionFileCommand}"
                     IconImageSource="addNew"
                     Order="Primary"
                     Text="Add new file" />
        <ToolbarItem Command="{Binding DeleteAllVaultConnectionFilesCommand}"
                     IconImageSource="deleteAll"
                     Order="Primary"
                     Text="Delete all files" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="0,10">
            <ListView HasUnevenRows="True"
                      ItemTapped="ListView_ItemTapped"
                      ItemsSource="{Binding VaultConnectionFiles}"
                      SelectionMode="Single"
                      SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="DeleteFileContextClicked"
                                          CommandParameter="{Binding FileId}"
                                          IconImageSource="deleteAll"
                                          Text="Delete" />
                            </ViewCell.ContextActions>
                            <StackLayout Padding="20,10"
                                         HeightRequest="30"
                                         Orientation="Horizontal">
                                <Label FontSize="Medium"
                                       HorizontalOptions="FillAndExpand"
                                       Text="{Binding FileName}"
                                       VerticalOptions="Center" />

                                <Image HeightRequest="40"
                                       Source="emptycheck"
                                       WidthRequest="40">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:VaultConnectionFileViewModel}}, Path=SetActiveFileCommand}"
                                                              CommandParameter="{Binding FileId}"
                                                              NumberOfTapsRequired="1" />
                                    </Image.GestureRecognizers>
                                    <Image.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}"
                                                     TargetType="Image"
                                                     Value="True">
                                            <Setter Property="Source" Value="filledcheck" />
                                        </DataTrigger>
                                    </Image.Triggers>
                                </Image>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
